{
    "name": "francescopasseri/fp-digital-publisher",
    "description": "FP Digital Publisher WordPress plugin.",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Francesco Passeri",
            "email": "info@francescopasseri.com",
            "homepage": "https://francescopasseri.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "FP\\Publisher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FP\\Publisher\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit --bootstrap tests/bootstrap.php --testdox tests"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
